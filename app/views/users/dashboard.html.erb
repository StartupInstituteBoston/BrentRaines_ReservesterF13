<table class="table table-striped">
  <tr>
    <th>Restaurant</th>
    <th>Address</th>
    <th></th>
    <th></th>
  </tr>
  <% current_user.restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
      <td><%= full_address(restaurant).gsub('+', ' ').gsub(',', ', ') %></td>
      <td><%= link_to "Edit", edit_restaurant_path(restaurant) %></td>
      <td><%= link_to "Delete", restaurant, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>