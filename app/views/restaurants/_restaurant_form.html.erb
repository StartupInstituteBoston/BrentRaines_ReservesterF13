<%= form_for @restaurant, :html => {:multipart => true }, data: { validate: "parsley" } do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name, data: { required: "true" } %>

  <%= f.label :description %>
  <%= f.text_area :description, data: { maxlength: "200" } %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip, "Zip Code" %>
  <%= f.text_field :zip %>

  <%= f.label :phone, "Phone Number" %>
  <%= f.text_field :phone %>

  <%= f.label :photo %>
  <%= f.file_field :photo %>

  <%= f.label :menu %>
  <%= f.file_field :menu %>

  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>