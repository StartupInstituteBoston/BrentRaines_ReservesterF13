<% provide(:title, "New Restaurant") %>

<h1>Add a new restaurant</h1>
<%= form_for @restaurant do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip, "Zip Code" %>
  <%= f.text_field :zip %>

  <%= f.label :phone, "Phone Number" %>
  <%= f.text_field :phone %>

  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>
